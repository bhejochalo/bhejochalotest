<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FAF7FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Heading -->
        <TextView
            android:id="@+id/headingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tell Us About Your Flight"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FF6F00"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/etPnr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter PNR"
            android:inputType="text"
            android:backgroundTint="#FF6F00" />

        <EditText
            android:id="@+id/etFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter First Name"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FF6F00" />

        <EditText
            android:id="@+id/etSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Last Name"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FF6F00" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Airline"
            android:layout_marginTop="10dp" />

        <Spinner
            android:id="@+id/airlineSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etLeavingDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select date you'll leave home"
            android:focusable="false"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FF6F00" />

        <EditText
            android:id="@+id/etLeavingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select time you'll leave home for the airport"
            android:focusable="false"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FF6F00" />

        <EditText
            android:id="@+id/etWeightUpto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Free space in luggage (in kg)"
            android:inputType="numberDecimal"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FF6F00" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Where is Space Available?"
            android:layout_marginTop="10dp" />

        <Spinner
            android:id="@+id/spaceAvailableSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What can you carry?"
            android:layout_marginTop="10dp" />

        <AutoCompleteTextView
            android:id="@+id/itemsCarryAutoComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select or type items (comma separated)"
            android:inputType="text"
            android:backgroundTint="#FF6F00" />



        <EditText
            android:id="@+id/etRemarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add Remarks (optional)"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FF6F00" />

        <CheckBox
            android:id="@+id/seeParcelCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I want to check the parcel before carrying."
            android:textSize="16sp"
            android:padding="8dp"/>

        <CheckBox
            android:id="@+id/checkboxTerms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I agree to the Terms and Conditions"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btnVerify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify and Continue"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FF6F00"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
