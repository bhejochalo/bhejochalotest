<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardTraveler"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FAFAFA">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Distance Badges (Top Right) - More visible -->
        <LinearLayout
            android:id="@+id/distanceContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:gravity="end"
            android:background="@drawable/distance_container_bg"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From:"
                    android:textColor="#5D5D5D"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.2 km"
                    android:background="@drawable/distance_badge_visible"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To:"
                    android:textColor="#5D5D5D"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvToDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9.2 km"
                    android:background="@drawable/distance_badge_visible"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Traveler Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/distanceContainer"
            android:layout_marginTop="16dp">

            <!-- Traveler Name -->
            <TextView
                android:id="@+id/tvTravelerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rahul Sharma"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <!-- Details Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:background="@drawable/details_bg_visible">

                <!-- Airline -->
                <TextView
                    android:id="@+id/tvAirline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœˆ Airline: IndiGo"
                    android:textSize="14sp"
                    android:textColor="#424242" />

                <!-- Destination -->
                <TextView
                    android:id="@+id/tvDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Destination: Mumbai"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:layout_marginTop="8dp" />

                <!-- PNR -->
                <TextView
                    android:id="@+id/tvPnr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“„ PNR: ABC123"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:layout_marginTop="8dp" />

                <!-- Leaving Time -->
                <TextView
                    android:id="@+id/tvLeavingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ•’ Departure: 10:30 AM"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:layout_marginTop="8dp" />

                <!-- Weight Upto -->
                <TextView
                    android:id="@+id/tvWeightUpto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš– Weight Allowance: 20 kg"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btnMoreDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="DETAILS"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#424242"
                    android:textAllCaps="false"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:paddingHorizontal="16dp"
                    android:textSize="12sp"/>

                <Button
                    android:id="@+id/btnBook"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="BOOK NOW"
                    android:backgroundTint="#4285F4"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    style="@style/Widget.MaterialComponents.Button"
                    android:paddingHorizontal="16dp"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>