<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="24dp"
    tools:context=".SenderReceiverSelectionActivity">

    <!-- Sender Button -->
    <Button
        android:id="@+id/senderButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_button"
        android:paddingVertical="16dp"
        android:text="ðŸšš I'm a Sender"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/travelerButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"/>

    <!-- Traveler Button -->
    <Button
        android:id="@+id/travelerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸ§³ I'm a Traveller"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/bg_rounded_button"
        android:paddingVertical="16dp"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/senderButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
